<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 使用 AppCompat 主题作为基础（最兼容） -->
    <style name="Theme.KPMManager" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 主色 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        
        <!-- 如果需要深色模式支持 -->
        <item name="android:forceDarkAllowed">false</item>
        
        <!-- 移除所有 Material Components 特定属性 -->
        <!-- 暂时不要添加 bottomNavigationStyle 和 materialButtonStyle -->
    </style>

    <!-- 如果需要自定义底部导航栏，使用 AppCompat 版本 -->
    <style name="BottomNavigationTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/purple_500</item>
        <!-- AppCompat 没有 colorOnPrimary，使用 colorControlNormal 或 colorControlActivated -->
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>